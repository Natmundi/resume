<div>
    {{#with main}}
    <main>
        <section>
        {{> title data="My educations" big=true}}
        
        <ul class="ps-5">
            {{#each educations}}
                
                <li>
                    {{name}}
                    {{#unless isEnd}} (still studying) {{/unless}}
                </li>
            {{/each}}
        </ul>
        </section>
        
        <section>
        {{> title data="My certifications" big=false}}
        
        <ul class="ps-5">
            {{#each certificates}}
                <li>
                    {{name}}
                    {{#if id}} ({{id}}) {{/if}}
                </li>
            {{/each}}
        </ul>    
        </section>
    </main>
    {{/with}}
</div>