<main class='p-2'>
  <div class='row'>
    {{#with formBlock}}
      <div class='col-7'>
        <div class='display-5 my-3'><b>{{header}}</b></div>
        {{#with rating}}
          <h6>{{title}}: {{value}}</h6>
        {{/with}}
        {{#with actionBlock}}
          <div class='nav nav-tabs'>
            {{#each tabs}}
              <div class='nav-item'>
                {{#if isActive}}
                  <a
                    href='#'
                    class='nav-link active'
                  ><strong>{{text}}</strong></a>
                {{else}}
                  <a href='#' class='nav-link'>{{text}}</a>
                {{/if}}
              </div>
            {{/each}}
          </div>
          <hr />
          <div class='card my-5'>
            {{#with report}}
              <div class='card-body'>
                <div class='card-title'>{{title}}</div>
                {{#with button}}
                  <a
                    href='{{link}}'
                    class='btn btn-primary'
                  >{{text}}</a>
                {{/with}}
              </div>
            {{/with}}
          </div>
        {{/with}}
        <hr />
        {{#with feedbackBlock}}
          <div class='display-6 my-5'><strong
            >{{title}}</strong></div>
          <div class='row'>
            {{#each buttons}}
              {{#if isWarning}}
                <div class='col-4 mb-2 ps-3'>
                  <a
                    href='{{link}}'
                    class='btn btn-warning text-light'
                  >{{text}}</a>
                </div>
              {{/if}}
              {{#if isSuccess}}
                <div class='col-4'>
                  <a
                    href='{{link}}'
                    class='btn btn-success'
                  >{{text}}</a>
                </div>
              {{/if}}
              {{#if isDanger}}
                <div class='col-4'>
                  <a
                    href='{{link}}'
                    class='btn btn-danger'
                  >{{text}}</a>
                </div>
              {{/if}}
            {{/each}}
          </div>
        {{/with}}
      </div>
      <div class='col-4'>
        {{#with goodsInfo}}
          <div class='card'>
            <div class='col-8 p-3'>
              <img
                src='{{photo}}'
                alt='Photo img'
                class='card-img-top p-2'
              />
              <h5 class="ps-2">{{name}}</div>
            </h5>
          </div>
          <div class='card my-2'>
            <div class='col-8 p-3'>
              <h5 class="ps-2">{{price}}</h5>
              {{#if inMarket}} Є в наявності {{/if}}
              <div>
              {{#each buttons}}
                {{#if isPrimary}}
                    <a href="{{link}}" class="btn btn-primary my-2">{{text}}</a>
                {{/if}}
                <div class="my-1">
                {{#if isSecondary}}
                <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                {{/if}}
                </div>
              {{/each}}
              </div>
            </div>
          </div>
          <div class="card">
            {{#with seller}}
                <div class="p-3">{{title}}: <b>{{value}}</b></div> 
            {{/with}}
          </div>
        {{/with}}
      </div>
    {{/with}}
    <hr>
        {{#each reviewList}}
            <div class="card my-3">
                <div class="card m-4">
                    <div class='card-header'>
                        {{#with title}}
                            <h6><b>{{userName}}</b></h6>
                            <p>{{caption}}</p>
                            <p>{{date}}</p>
                        {{/with}}
                    </div>
                        {{#with reviewBody}}
                        <div class="card-body">
                            <div class="card-title">
                                {{#with seller}}
                                    <p>{{title}}: {{value}}</p>
                                {{/with}}
                            </div>
                            <div>
                                {{#with rating}}
                                    <p>{{title}}: {{value}}</p>
                                {{/with}}
                            </div>
                            <div>
                                {{#each text}}
                                    {{this}}
                                {{/each}}
                            </div>
                            <div class="my-4">
                                {{#with advantages}}
                                    <h6><b>{{title}}:</b></h6>
                                    <p>{{text}}</p>
                                {{/with}}
                            </div>
                            <div class="my-4">
                                {{#with disadvantages}}
                                    <h6><b>{{title}}:</b></h6>
                                    <p>{{text}}</p>
                                {{/with}}
                            </div>
                            <div class="my-4">
                                <div class='col-5'>
                                    {{#each images}}
                                    <img src='{{this}}' alt='Photo img' />
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                </div>
                                {{#each coments}}
                                <div class="card mb-4 ms-5 p-2">
                                    <div class="card-title"><b>{{userName}}</b></div>
                                    <p>{{date}}</p>
                                    <p>{{text}}</p>
                                </div>
                                {{/each}}
                        {{/with}}
            </div>    
        {{/each}}
        <hr>
        <div class="col-12 p-0">
            <div class="card text-bg-success">
                {{#with service}}
                <div class="card-body text-center">
                    <h2 class="text-center">{{title}}</h2>
                    <p class="text-center">{{description}}</p>
                    {{#each buttons}}
                    <a href="link" class="btn btn-primary">{{text}}</a>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
  </div>
</main>