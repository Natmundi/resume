<main class='p-2'>
  <div class='row'>
    {{#with formBlock}}
      <div class='col-8'>
        <div class='display-5 my-3'><b>{{header}}</b></div>
        {{#with rating}}
          <h6>{{title}}: {{value}}</h6>
        {{/with}}
        {{#with actionBlock}}
          <div class='nav nav-tabs'>
            {{#each tabs}}
              <div class='nav-item'>
                {{#if isActive}}
                  <a
                    href='#'
                    class='nav-link active'
                  ><strong>{{text}}</strong></a>
                {{else}}
                  <a href='#' class='nav-link'>{{text}}</a>
                {{/if}}
              </div>
            {{/each}}
          </div>
          <hr />
          <div class='card my-5'>
            {{#with report}}
              <div class='card-body'>
                <div class='card-title'>{{title}}</div>
                {{#with button}}
                  <a
                    href='{{link}}'
                    class='btn btn-primary'
                  >{{text}}</a>
                {{/with}}
              </div>
            {{/with}}
          </div>
        {{/with}}
        <hr />
        {{#with feedbackBlock}}
          <div class='display-6 my-5'><strong
            >{{title}}</strong></div>
          <div class='row'>
            {{#each buttons}}
              {{#if isWarning}}
                <div class='col-4 mb-2 ps-3'>
                  <a
                    href='{{link}}'
                    class='btn btn-warning text-light'
                  >{{text}}</a>
                </div>
              {{/if}}
              {{#if isSuccess}}
                <div class='col-4'>
                  <a
                    href='{{link}}'
                    class='btn btn-success'
                  >{{text}}</a>
                </div>
              {{/if}}
              {{#if isDanger}}
                <div class='col-4'>
                  <a
                    href='{{link}}'
                    class='btn btn-danger'
                  >{{text}}</a>
                </div>
              {{/if}}
            {{/each}}
          </div>
        {{/with}}
      </div>
      <div class='col-4'>
        {{#with goodsInfo}}
          <div class='card'>
            <div class='col-8 p-3'>
              <img
                src='{{photo}}'
                alt='Photo img'
                class='card-img-top p-2'
              />
              <h5 class="ps-2">{{name}}</div>
            </h5>
          </div>
          <div class='card my-2'>
            <div class='col-8 p-3'>
              <h5 class="ps-2">{{price}}</h5>
              {{#if inMarket}} Є в наявності {{/if}}
              <div>
              {{#each buttons}}
                {{#if isPrimary}}
                    <a href="{{link}}" class="btn btn-primary my-2">{{text}}</a>
                {{/if}}
                <div class="my-1">
                {{#if isSecondary}}
                <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                {{/if}}
                </div>
              {{/each}}
              </div>
            </div>
          </div>
          <div class="card">
            {{#with seller}}
                <div class="p-3">{{title}}: <b>{{value}}</b></div> 
            {{/with}}
          </div>
        {{/with}}
      </div>
    {{/with}}
    <hr>
    {{#each reviewList}}
        {{> reviewItem}}
    {{/each}}
      <div class="col-12 p-0">
        {{#with service}}
          {{> shopaction}}
        {{/with}}
      </div>
  </div>
</main>