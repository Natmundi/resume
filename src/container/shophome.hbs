<main>
  <sector class="m-5 p-5">
    <div class='mb-3'>
      {{#with navigation}}
        <div class='nav nav-tabs'>
          {{#each links}}
            <div class='nav-item'>
              <a
                href='{{href}}'
                class='text-primary nav-link'
              >{{text}}</a>
            </div>
          {{/each}}
          <div class='nav-item'>
            <a
              href='#'
              class='nav-link disabled'
            >Disabled</a>
          </div>
        </div>
      {{/with}}
    </div>
  </sector>

  <sector class='m-5 p-5'>
    {{#with newsBlock}}
      <h1 class='text-capitalize text-center'>{{title}}</h1>
      <div class='row'>
        {{#each cards}}
          <div class='col-3'>
            <div class='card text-bg-dark'>
              <div class='card-body'>
                <h6 class='card-title'>

                  {{title}}

                  {{#if isTop}}
                    <span
                      class='badge text-bg-danger rounded-pill'
                    >Top</span>
                  {{/if}}

                  {{#if isNew}}
                    <span
                      class='badge text-bg-success rounded-pill'
                    >New</span>
                  {{/if}}

                </h6>
                <p>{{description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{/with}}
  </sector>

  <sector class=' ms-0 my-5 p-5'>
    
      {{#with goodsBlock}}

        <div class='nav nav-tabs'>
          {{#each tabs}}
            <div class='nav-item'>
              {{#if isDisabled}}
                <h6
                  class='nav-link disabled text-secondary'
                >{{text}}</h6>
              {{else}}
                {{#if isActive}}
                  <h6 class='nav-link active'>{{text}}</h6>
                {{else}}
                  <h6 class='nav-link'>{{text}}</h6>
                {{/if}}
              {{/if}}
            </div>
          {{/each}}

       <div class="row g-2">
        
          {{#each cards}}
          <div class="col-4">
            <div class='card text-bg-light'>
                        <img
                class='card-img-top'
                src='{{image}}'
                alt='Photo img'
                />
                    <div class="card-body">
                    
                        <h6 class="card-title text-dark"> 
                                {{title}}

                        {{#if isHot}}
                            <span
                            class='badge text-bg-warning rounded-pill'
                            >Hot!</span>
                        {{/if}}

                        {{#if isNew}}
                            <span
                            class='badge text-bg-primary rounded-pill'
                            >New!</span>
                        {{/if}}

                        </h6>
                        <p class="text-dark">{{description}}</p>
                        
                    </div>
                </div>
            </div>
            {{/each}}
        
        </div>   

        </div>
      {{/with}}
    </div>
  </sector>

  <sector class="ms-0 my-5 p-5">
    <div class='col-12'>
    {{#with subscribe}}
        
        <div class="card text-bg-dark p-2">
            <h2>{{header}}</h2>
            <p>{{description}}</p>
            
                {{#each buttons}}
                <div class="col-3">
                        <a class='btn btn-primary mb-2 ms-0' href="{{link}}">{{text}}</a>
                </div>
                {{/each}}

        </div>
        
    {{/with}}
    </div>
  </sector>
  
  <sector class="ms-0 my-5 p-5">
     <div class='col-12 text-center'>
    {{#with service}}
        
        <div class="card text-bg-success text-center">
            <div class='card-body'>
            <h2 class='card-title'>{{title}}</h2>
            <p>{{description}}</p>
            
                {{#each buttons}}
                <div class="text-center mb-3">
                        <a class='btn btn-primary text-center' href="{{link}}">{{text}}</a>
                </div>
                {{/each}}
            </div>    
        </div>
        
    {{/with}}
    </div>
  </sector>

</main>