<main class='ps-0'>
  <sector class='my-5'>
    <div class='row'>
      {{#with header}}
        <h2 class='text-dark'>{{title}}</h2>
        {{#with button}}
          <div class='col-4 my-3 mb-3'>
            <a
              href='{{link}}'
              class='btn btn-outline-secondary'
            >{{text}}</a>
          </div>
        {{/with}}
      {{/with}}
    </div>
  </sector>
  <hr />
  {{#each goodsBlock}}
    <div class='card ps-1'>
      <div class='card-body'>
        <div class='row'>
          <div class='col-2 ps-0'>
            <img
              src='https://picsum.photos/110/110'
              alt='Photo img'
            />
          </div>
          <div class='col-4 m-1'>
            <h6>{{name}}</h6>
            <p>{{description}}</p>
          </div>
          <div class='col-2 mt-5'>
            {{#with price}}
              <small>{{title}}:</small>
              <p><b>{{value}}</b></p>
            {{/with}}
          </div>
          <div class='col-1 mt-5 me-4 p-0'>
            <div class='text-center'>{{amount}}</div>
          </div>
          <div class='col-2 mt-3 me-0'>
            {{#each buttons}}
              {{#if isPrimary}}
                <button
                  class='btn btn-primary'
                >{{text}}</button>
              {{/if}}
              <br />
              {{#if isDanger}}
                <button
                  class='btn btn-outline-danger'
                >{{text}}</button>
              {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
  <hr />
  <div class='row p-1'>
    {{#with total}}
      <h3 class='text-dark'><strong>{{title}}</strong></h3>
      <div class='display-6'><strong
        >{{amount}}</strong></div>
      <p>{{delivery}}</p>
      {{#each buttons}}
        <div class='row'>
          <div class='col-5 my-2'>
            {{#if isSuccess}}
              <a
                href='{{link}}'
                class='btn btn-success'
              >{{text}}</a>
            {{/if}}
            {{#if isOutline}}
              <a
                href='{{link}}'
                class='btn btn-outline-success'
              >{{text}}</a>
            {{/if}}
          </div>
        </div>
      {{/each}}
    {{/with}}
  </div>
</main>