<div>
  <ul>
    {{#each list}}
      <li>
        
        {{#if @first}} <button>{{name}}</button> {{/if}}

        <button {{#if @last}} disabled {{/if}}>{{name}} - {{@index}}</button>

        <span>{{name}}</span>

      </li>
    {{/each}}
  </ul>

  <br>
  <br>

   {{#each user}}
      <li>
        {{this}}
      </li>
    {{/each}}
    <br>
  <br>
  
   {{#each users}}
      <li>
       
        {{@key}}: {{#if value}}{{value}}{{else}}{{text}}{{/if}},
        
      </li>
    {{/each}}
</div>