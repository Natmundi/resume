{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}


{{#with main}}
    <main class="m-5">
        <section class="ms-5">
            <div class="m-5">
                {{> title data="Work history" big=true}}
            </div>
            <div class="my-5">
                <ul class="my-5">
                    {{#each works}}
                    
                    <li>
                        <div class="my-5">{{position}}</div>
                        
                        
                        
                        <div class="my-5">
                            
                            {{duration.from}} - 
                            {{#if duration.to}} 
                                {{duration.to}} 
                            {{else}} 
                                (still working) 
                            {{/if}}
                        
                        </div>
                        
                        
                        
                        <div class="my-5">
                            {{#if company.url}}
                                {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                                <b>{{company.name}}</b>
                            {{/if}}
                        </div>
                            
                        
                        
                        <div class="my-5"><strong> Projects ({{projectAmount}}) </strong></div>

                        

                        <ul class="m-5">
                            {{#each projects}}
                            <li>
                                <div class="m-5">

                                    {{> link text=name href=url blank=true noLine=true}}
                                
                                
                                
                                <div class="m-5">
                                    <p>{{about}}</p>
                                </div>
                                
                               
                                
                                <div class="m-5">
                                    <em>Project stacks ({{stackAmount}})</em>
                                </div>
                                
                              
                                
                                <div class="my-5">
                                    <ul>
                                        {{#each stacks}}
                                        
                                        <li>
                                            {{name}}
                                        
                                        </li>
                                        
                                        {{/each}}
                                    </ul>
                                </div>
                                
                                <br>
                                
                                <div class="my-5">
                                    <em>Project awards ({{awardAmount}})</em>
                                </div>
                                
                                <br>
                                
                                <div class="my-5">
                                    <ul>
                                        {{#each awards}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>

                                </div>

                            </li>
                            {{/each}}
                        </ul>
                    
                    </li>
                    
                    <br>
                    
                    {{/each}}
                </ul>
            </div>
    
        
    </main>
{{/with}}

 

</div>

