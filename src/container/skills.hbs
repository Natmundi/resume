{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>
  {{#with main}}
      <section class="p-3">
        <div class="my-2 mt-0 ms-2">
        {{> title data="All skills" big=true}}
        </div>
          <ul class="my-3 ms-5">
              {{#each skills}}
              <li class="my-1">
                
                {{name}}  
                {{#if point includeZero=true}} ({{point}}) {{/if}}
                
                {{#if isTop}} (top) {{/if}}
                
                {{#unless point includeZero=true}} (not studing) {{/unless}}
                
                {{#unless point}}
                  {{#if point includeZero=true}} (studing now) {{/if}}
                {{/unless}}
                
                </li>
            {{/each}}
          </ul>
      </section>
      <section class="p-3">
        <div class=class="my-2 mt-0 ms-2">
          {{> title data="My hobbies" big=false}}
        </div>
          <ol class="my-3 ms-5">
            {{#each hobbies}}
              <li class="my-1">
                {{name}}
                {{#if isMain}} (favourite) {{/if}}
              </li>
            {{/each}}
          </ol>
      </section>
    
  {{/with}}

</main>

