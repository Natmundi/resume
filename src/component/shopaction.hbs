<div class='card text-bg-success text-center'>
  <div class='card-body'>
    <h2 class='card-title text-capitalize'>{{title}}</h2>
    <p>{{description}}</p>

    {{#each buttons}}
      <div class='text-center mb-3'>
        <a
          class='btn btn-primary text-center'
          href='{{link}}'
        >{{text}}</a>
      </div>
    {{/each}}
  </div>
</div>