<div class='card ps-1'>
  <div class='card-body'>
    <div class='row'>
      <div class='col-2 ps-0'>
        <img
          src='https://picsum.photos/110/110'
          alt='Photo img'
        />
      </div>
      <div class='col-4 m-1'>
        <h6>{{name}}</h6>
        <p>{{description}}</p>
      </div>
      <div class='col-2 mt-5'>
        {{#with price}}
          <small>{{title}}:</small>
          <p><b>{{value}}</b></p>
        {{/with}}
      </div>
      <div class='col-1 mt-5 me-4 p-0'>
        <div class='text-center'>{{amount}}</div>
      </div>
      <div class='col-2 mt-3 me-0'>
        {{#each buttons}}
          {{#if isPrimary}}
            <button
              class='btn btn-primary'
            >{{text}}</button>
          {{/if}}
          <br />
          {{#if isDanger}}
            <button
              class='btn btn-outline-danger'
            >{{text}}</button>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>