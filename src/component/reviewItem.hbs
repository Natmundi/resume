<div class="card my-3">
                <div class="card m-4">
                    <div class='card-header'>
                        {{#with title}}
                            <h6><b>{{userName}}</b></h6>
                            <p>{{caption}}</p>
                            <p>{{date}}</p>
                        {{/with}}
                    </div>
                        {{#with reviewBody}}
                        <div class="card-body">
                            <div class="card-title">
                                {{#with seller}}
                                    <p>{{title}}: {{value}}</p>
                                {{/with}}
                            </div>
                            <div>
                                {{#with rating}}
                                    <p>{{title}}: {{value}}</p>
                                {{/with}}
                            </div>
                            <div>
                                {{#each text}}
                                    {{this}}
                                {{/each}}
                            </div>
                            <div class="my-4">
                                {{#with advantages}}
                                    <h6><b>{{title}}:</b></h6>
                                    <p>{{text}}</p>
                                {{/with}}
                            </div>
                            <div class="my-4">
                                {{#with disadvantages}}
                                    <h6><b>{{title}}:</b></h6>
                                    <p>{{text}}</p>
                                {{/with}}
                            </div>
                            <div class="my-4">
                                <div class='col-5'>
                                    {{#each images}}
                                    <img src='{{this}}' alt='Photo img' />
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                </div>
                                {{#each coments}}
                                <div class="card mb-4 ms-5 p-2">
                                    <div class="card-title"><b>{{userName}}</b></div>
                                    <p>{{date}}</p>
                                    <p>{{text}}</p>
                                </div>
                                {{/each}}
                        {{/with}}
            </div>    